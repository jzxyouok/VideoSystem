@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>古驿平安视频系统</title>
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/styles.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Scripts/Utils.js"></script>

    <!--[if lt IE 9]>
    <script src="~/Scripts/html5shiv.js"></script>
    <script src="~/Scripts/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="row">
        <div style="margin:auto;margin-top: 100px;width:350px;">
            <div class="login-panel panel panel-default">
                <div class="panel-heading" style="text-align:center">后台登陆</div>
                <div class="panel-body">
                    <p id="erro_info" style="color:red;text-align:center">@TempData["erroInfo"]</p>
                    <form role="form" action="@Url.Content("~/Admin/BackLogin/")" method="post">
                        <div class="form-group">
                            <input class="form-control" placeholder="账号" name="account" type="text" autofocus="" required >
                        </div>
                        <div class="form-group">
                            <input class="form-control" placeholder="密码" name="password" type="password" required>
                        </div>

                        <table>
                            <tr>
                                <td>
                                    <div class="form-group" style="margin-top:10px;">
                                        <input class="form-control" placeholder="验证码" name="code" id="code" type="text" required onblur="verifyCode();">
                                    </div>
                                </td>
                                <td style="padding-left:10px;">
                                    <a onclick="refreshCode();" >
                                        <img src="@Url.Content("~/VerifyCode")" style="width: 140px; height: 50px;" id="codeImg"/>
                                    </a>
                                </td>
                            </tr>
                        </table>

                        <div style="text-align:center">
                            <input type="submit" class="btn btn-primary" value="登陆" />
                            <input type="reset" class="btn btn-primary" value="清除" />
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
        <!-- /.col-->
    </div>
    <!-- /.row -->
</body>
</html>
