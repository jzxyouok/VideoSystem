@{
    ViewBag.Title = "AddManagerPage";
    Layout = "~/Views/Shared/_BackLayout.cshtml";
}

<div class="main" style="margin-left:290px;width:80%">
    <div class="row">
        <ol class="breadcrumb">
            <li><a href="@Url.Content("~/Admin/BackMain/")"><span class="glyphicon glyphicon-home"></span></a></li>
            <li class="active">添加管理员</li>
        </ol>
    </div>
    <!--/.row-->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">添加管理员</div>
                <div class="panel-body">
                    <p id="erro_info" style="color:red;text-align:center">@TempData["erroInfo"]</p>
                    <form role="form" action="@Url.Content("~/LimitsManager/AddManagerPage")" method="post">
                        <table style="width:600px;margin:auto;font-size:1.5em;" class="table table-bordered">
                            <tr>
                                <td>账号：</td>
                                <td>
                                    <input type="text" class="form-control" id="password" name="oldPass" onblur="" required>
                                </td>
                            </tr>
                            <tr>
                                <td>密码：</td>
                                <td>
                                    <input type="password" class="form-control" id="Pass" name="newPass" onblur="" required>
                                </td>
                            </tr>
                            <tr>
                                <td>确认：</td>
                                <td>
                                    <input type="password" class="form-control" id="passConfirm" name="PassConfirm" onblur="" required>
                                </td>
                            </tr>
                            <tr>
                                <td>邮箱：</td>
                                <td>
                                    <input type="text" class="form-control" id="email" name="email" onblur="" required>
                                </td>
                            </tr>
                            <tr>
                                <td>电话：</td>
                                <td>
                                    <input type="text" class="form-control" id="phone" name="phone" onblur="" required>
                                </td>
                            </tr>
                            <tr>
                                <td>权限：</td>
                                <td>
                                    <div class="checkbox">
                                        <label>
                                          <input type="checkbox" checked>视频管理
                                        </label>
                                     </div>
                                    <div style="padding-left:20px;">
                                        <label class="checkbox-inline">
                                            <input type="checkbox" id="" value="option1" checked>上传
                                        </label>
                                        <label class="checkbox-inline">
                                            <input type="checkbox" id="" value="option1" checked>编辑
                                        </label>
                                        <label class="checkbox-inline">
                                            <input type="checkbox" id="" value="option1" checked>删除
                                        </label>
                                    </div>

                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" checked>邀请码管理
                                        </label>
                                     </div>
                                    <div style="padding-left:20px;">
                                        <label class="checkbox-inline">
                                            <input type="checkbox" id="" value="option1" checked>上传
                                        </label>
                                        <label class="checkbox-inline">
                                            <input type="checkbox" id="" value="option1" checked>编辑
                                        </label>
                                        <label class="checkbox-inline">
                                            <input type="checkbox" id="" value="option1" checked>删除
                                        </label>
                                    </div>

                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" checked>用户管理
                                        </label>
                                     </div>
                                    <div style="padding-left:20px;">
                                        <label class="checkbox-inline">
                                            <input type="checkbox" id="" value="option1" checked>查看邀请码
                                        </label>
                                        <label class="checkbox-inline">
                                            <input type="checkbox" id="" value="option1" checked>编辑
                                        </label>
                                        <label class="checkbox-inline">
                                            <input type="checkbox" id="" value="option1" checked>删除
                                        </label>
                                        <label class="checkbox-inline">
                                            <input type="checkbox" id="" value="option1" checked>意见反馈
                                        </label>
                                    </div>

                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" checked>设置
                                        </label>
                                     </div>
                                    <div style="padding-left:20px;">
                                        <label class="checkbox-inline">
                                            <input type="checkbox" id="" value="option1" checked>编辑信息
                                        </label>
                                        <label class="checkbox-inline">
                                            <input type="checkbox" id="" value="option1" checked>修改密码
                                        </label>
                                    </div>
                                </td>
                            </tr>
                        </table>
                        <div style="text-align:center;margin-top:20px;">
                            <button type="submit" class="btn btn-default">添加</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
